@model IEnumerable<BEInvitacionesOnline.Models.Payment>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nameCard)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.numberCard)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.expireDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cvv)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nameCard)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.numberCard)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.expireDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cvv)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
